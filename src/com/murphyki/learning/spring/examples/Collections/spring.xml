<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
        "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
	<bean id="triangle" class="com.murphyki.learning.spring.examples.Collections.Triangle">
		<property name="type">
			<value>Scalene</value>
		</property>
		
		<property name="points">
			<list>
				<ref bean="pointA" />
				<ref bean="pointB" />
				<ref bean="pointC" />
			</list>
		</property>
	</bean>
	
	<bean id="pointA" class="com.murphyki.learning.spring.examples.Collections.Point">
		<property name="x" value="0" />
		<property name="y" value="0" />
	</bean>
	
	<bean id="pointB" class="com.murphyki.learning.spring.examples.Collections.Point">
		<property name="x" value="10" />
		<property name="y" value="0" />
	</bean>
	
	<bean id="pointC" class="com.murphyki.learning.spring.examples.Collections.Point">
		<property name="x" value="0" />
		<property name="y" value="10" />
	</bean>
	
</beans>